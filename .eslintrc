{
  "parserOptions": {
    "ecmaVersion": 8
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-extra-parens": [
      "error",
      "all"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-shadow": [
      "error"
    ],
    "indent": [
      "error",
      2
    ],
    "no-var": [
      "error"
    ]
  },
  "globals": {
    "Promise": false
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
